{
	"files": [],
	"references": [
		{ "path": "./tsconfig.app.json" },
		{ "path": "./tsconfig.node.json" }
	],
	"compilerOptions": {
		"moduleResolution": "node", // Required for proper module resolution
		"esModuleInterop": true, // Helps with default/named imports
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"noImplicitAny": false,
		"noUnusedParameters": false,
		"skipLibCheck": true,
		"allowJs": true,
		"noUnusedLocals": false,
		"strictNullChecks": false
	}
}
